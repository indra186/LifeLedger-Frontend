<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg">

    <!-- Header Background -->
    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/bg_header_gradient"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/habits"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="48dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/indicator_inactive"
                app:tint="@color/white"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="24dp"
                android:contentDescription="@string/indicator_icon_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Habit Stats Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_habit_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/habit_completion"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"/>
                        
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/completion_rate_85"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-black"/>
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/completion_rate_increase"
                            android:textColor="@color/income_green"
                            android:layout_marginStart="12dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="16dp"
                        android:progress="85"
                        android:progressTint="@color/warm_orange"
                        android:progressBackgroundTint="#F0F0F0"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- All Habits Header -->
            <TextView
                android:id="@+id/tv_all_habits_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                android:text="@string/your_habits"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/card_habit_stats"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Habit List -->
            <ImageView
                android:id="@+id/btn_add_habit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/ic_plus"
                android:contentDescription="@string/create_habit_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_all_habits_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_all_habits_title"
                app:layout_constraintVertical_bias="0.0"
                app:tint="@color/brand_purple" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_all_habits_title">

                <!-- Habit 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/habit_card_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_fitness"
                            app:tint="@color/white"
                            android:background="@drawable/bg_social_button"
                            android:backgroundTint="@color/light_blue_bg"
                            android:contentDescription="@string/fitness_icon_desc"
                            android:padding="12dp"/>
                            
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/morning_workout"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/habit_time_morning"
                                android:textColor="@color/gray"
                                android:textSize="12sp"/>
                        </LinearLayout>
                        
                        <CheckBox
                            android:id="@+id/habit_checkbox_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:buttonTint="@color/income_green"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                
                 <!-- Habit 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/habit_card_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_health"
                            app:tint="@color/white"
                            android:background="@drawable/bg_social_button"
                            android:backgroundTint="@color/light_purple_bg"
                            android:contentDescription="@string/health_icon_desc"
                            android:padding="12dp"/>
                            
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/drink_water"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/habit_time_water"
                                android:textColor="@color/gray"
                                android:textSize="12sp"/>
                        </LinearLayout>
                        
                        <CheckBox
                            android:id="@+id/habit_checkbox_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:buttonTint="@color/gray"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                
                 <!-- Habit 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/habit_card_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_book"
                            app:tint="@color/white"
                            android:background="@drawable/bg_social_button"
                            android:backgroundTint="#FF9800"
                            android:contentDescription="@string/book_icon_desc"
                            android:padding="12dp"/>
                            
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/read_30_min"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/habit_time_reading"
                                android:textColor="@color/gray"
                                android:textSize="12sp"/>
                        </LinearLayout>
                        
                        <CheckBox
                            android:id="@+id/habit_checkbox_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:buttonTint="@color/gray"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Header -->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:padding="8dp"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_transaction_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Type Switcher -->
            <LinearLayout
                android:id="@+id/type_switcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btn_expense"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/expense"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:backgroundTint="@color/expense_red"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="12dp"
                    android:textColor="@android:color/white"
                    />

                <Button
                    android:id="@+id/btn_income"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/income"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:backgroundTint="@color/toggle_unselected"
                    android:layout_marginStart="8dp"
                    app:cornerRadius="12dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type_switcher" />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/limit_placeholder"
                android:background="@drawable/bg_edit_text"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:inputType="numberDecimal"
                app:layout_constraintTop_toBottomOf="@id/tv_amount" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_amount" />

            <!-- Category Chips (Simplified grid) -->
            <LinearLayout
                android:id="@+id/category_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_category">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/food"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_edit_text"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/transport"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_edit_text"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="4dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/entertainment"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_edit_text"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/shopping"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_edit_text"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/healthcare"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_edit_text"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="4dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/education"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_edit_text"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/housing"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_edit_text"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/others"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_edit_text"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="4dp"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_grid" />

            <EditText
                android:id="@+id/et_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/desc_hint"
                android:background="@drawable/bg_edit_text"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_desc" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_desc" />

            <TextView
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_hint"
                android:background="@drawable/bg_edit_text"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:drawableEndCompat="@android:drawable/ic_menu_my_calendar"
                app:drawableTint="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv_date" />

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_date" />

            <TextView
                android:id="@+id/spinner_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chase_checking"
                android:background="@drawable/bg_edit_text"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:drawableEndCompat="@android:drawable/arrow_down_float"
                app:drawableTint="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv_account" />
                
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/add_transaction_btn"
                android:backgroundTint="@color/brand_purple"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/spinner_account"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Header -->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        app:tint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_habit_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tv_habit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/habit_name"
                android:textColor="@color/gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_habit_name"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="@string/habit_name_hint"
                android:background="@drawable/bg_edit_text"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_habit_name" />

            <TextView
                android:id="@+id/tv_choose_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_icon"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_habit_name" />

            <!-- Icon Grid -->
            <LinearLayout
                android:id="@+id/icon_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_icon">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_marginBottom="8dp">
                     <TextView android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ðŸ’ª" android:gravity="center" android:background="@drawable/bg_social_button" android:backgroundTint="#F5F5F5" android:textSize="20sp" android:layout_marginEnd="4dp"/>
                     <TextView android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ðŸ“š" android:gravity="center" android:background="@drawable/bg_social_button" android:backgroundTint="#F5F5F5" android:textSize="20sp" android:layout_marginHorizontal="4dp"/>
                     <TextView android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ðŸ§˜" android:gravity="center" android:background="@drawable/bg_social_button" android:backgroundTint="#F5F5F5" android:textSize="20sp" android:layout_marginHorizontal="4dp"/>
                     <TextView android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ðŸ’§" android:gravity="center" android:background="@drawable/bg_social_button" android:backgroundTint="#F5F5F5" android:textSize="20sp" android:layout_marginHorizontal="4dp"/>
                     <TextView android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ðŸƒ" android:gravity="center" android:background="@drawable/bg_social_button" android:backgroundTint="#F5F5F5" android:textSize="20sp" android:layout_marginStart="4dp"/>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">
                     <TextView android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ðŸŽ¨" android:gravity="center" android:background="@drawable/bg_social_button" android:backgroundTint="#F5F5F5" android:textSize="20sp" android:layout_marginEnd="4dp"/>
                     <TextView android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ðŸŽµ" android:gravity="center" android:background="@drawable/bg_social_button" android:backgroundTint="#F5F5F5" android:textSize="20sp" android:layout_marginHorizontal="4dp"/>
                     <TextView android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="âœï¸" android:gravity="center" android:background="@drawable/bg_social_button" android:backgroundTint="#F5F5F5" android:textSize="20sp" android:layout_marginHorizontal="4dp"/>
                     <TextView android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ðŸŒ±" android:gravity="center" android:background="@drawable/bg_social_button" android:backgroundTint="#F5F5F5" android:textSize="20sp" android:layout_marginHorizontal="4dp"/>
                     <TextView android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ðŸ˜´" android:gravity="center" android:background="@drawable/bg_social_button" android:backgroundTint="#F5F5F5" android:textSize="20sp" android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frequency"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon_grid" />

            <LinearLayout
                android:id="@+id/freq_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_frequency">
                
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daily"
                    android:backgroundTint="#F5F5F5"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="4dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/weekly"
                    android:backgroundTint="#F5F5F5"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:layout_marginHorizontal="4dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/custom"
                    android:backgroundTint="#F5F5F5"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/freq_container" />

            <LinearLayout
                android:id="@+id/goal_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_goal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:hint="@string/goal_placeholder"
                    android:background="@drawable/bg_edit_text"
                    android:paddingHorizontal="16dp"
                    android:inputType="number"
                    android:gravity="center_vertical"/>
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/times_per_day"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminder"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/goal_container" />

            <EditText
                android:id="@+id/et_reminder"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="@string/time_placeholder"
                android:background="@drawable/bg_edit_text"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:inputType="time"
                app:layout_constraintTop_toBottomOf="@id/tv_reminder" />

            <CheckBox
                android:id="@+id/cb_reminder"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:buttonTint="@color/gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_reminder" />

            <TextView
                android:id="@+id/tv_reminder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_daily_reminders"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/cb_reminder"
                app:layout_constraintTop_toTopOf="@id/cb_reminder" />

            <TextView
                android:id="@+id/tv_reminder_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminder_desc"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tv_reminder_title"
                app:layout_constraintTop_toBottomOf="@id/tv_reminder_title" />

            <Button
                android:id="@+id/btn_create_habit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/btn_create_habit"
                android:backgroundTint="@color/brand_purple"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_reminder_desc" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

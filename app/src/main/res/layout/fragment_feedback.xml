<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Feedback"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:text="We'd love your feedback!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <TextView
                android:text="Help us improve LifeLedger"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <TextView
                android:text="How would you rate your experience?"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_gravity="start"/>

            <!-- Star Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">
                
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/btn_star_big_off"
                    app:tint="#FFC107"
                    android:layout_marginHorizontal="8dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/btn_star_big_off"
                    app:tint="#FFC107"
                    android:layout_marginHorizontal="8dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/btn_star_big_off"
                    app:tint="#FFC107"
                    android:layout_marginHorizontal="8dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/btn_star_big_off"
                    app:tint="#FFC107"
                    android:layout_marginHorizontal="8dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/btn_star_big_off"
                    app:tint="#FFC107"
                    android:layout_marginHorizontal="8dp"/>
            </LinearLayout>

            <TextView
                android:text="What type of feedback?"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_gravity="start"/>

            <!-- Chips Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">
                    
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bug Report"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_social_button"
                        android:backgroundTint="@color/light_gray_bg"
                        android:layout_marginEnd="4dp"
                        android:stateListAnimator="@null"/>
                        
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Feature Request"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_social_button"
                        android:backgroundTint="@color/light_gray_bg"
                        android:layout_marginStart="4dp"
                        android:stateListAnimator="@null"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="General"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_social_button"
                        android:backgroundTint="@color/light_gray_bg"
                        android:layout_marginEnd="4dp"
                        android:stateListAnimator="@null"/>
                        
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Other"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_social_button"
                        android:backgroundTint="@color/light_gray_bg"
                        android:layout_marginStart="4dp"
                        android:stateListAnimator="@null"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:text="Subject"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_gravity="start"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Brief description"
                android:background="@drawable/bg_edit_text"
                android:backgroundTint="#F8F9FA"
                android:padding="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:text="Details"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_gravity="start"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Tell us more about your experience..."
                android:background="@drawable/bg_edit_text"
                android:backgroundTint="#F8F9FA"
                android:padding="16dp"
                android:gravity="top|start"
                android:layout_marginTop="8dp"/>
                
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Export my data"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:background="@drawable/bg_social_button"
                android:backgroundTint="@color/light_gray_bg"
                android:drawableStart="@android:drawable/stat_sys_download"
                android:drawableTint="@color/brand_purple"
                android:paddingHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:stateListAnimator="@null"/>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Submit Feedback"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:backgroundTint="@color/brand_purple"
                app:cornerRadius="28dp"
                android:layout_marginTop="32dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

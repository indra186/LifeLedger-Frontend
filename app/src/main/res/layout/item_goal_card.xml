<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/goal_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="#F0F0F0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_goal_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_flag"
            app:tint="@color/brand_purple"
            android:background="@drawable/bg_circle_soft_purple"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_goal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/iv_goal_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_goal_icon" />

        <TextView
            android:id="@+id/tv_goal_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0 / $1000"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/iv_goal_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_goal_name" />

        <ProgressBar
            android:id="@+id/pb_goal_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="20dp"
            android:progress="0"
            android:progressDrawable="@drawable/progress_rounded_purple"
            app:layout_constraintTop_toBottomOf="@+id/iv_goal_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UntitledApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary_warm</item>
        <item name="colorPrimaryVariant">@color/primary_warm_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_warm</item>
        <item name="colorSecondaryVariant">@color/secondary_warm_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <!-- Disable scrollbars globally -->
        <item name="android:scrollbars">none</item>
        <item name="android:scrollViewStyle">@style/Widget.App.ScrollView</item>
        <item name="recyclerViewStyle">@style/Widget.App.RecyclerView</item>
    </style>
    
    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_bg_dark</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="Widget.App.Card.Pastel" parent="Widget.App.Card">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">#2C2C2C</item> 
    </style>

    <style name="Widget.App.ScrollView" parent="android:Widget.ScrollView">
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Widget.App.RecyclerView" parent="android:Widget">
        <item name="android:scrollbars">none</item>
    </style>
</resources>